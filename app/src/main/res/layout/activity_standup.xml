<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textViewOpenDiscussion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_top"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/open_discussion"
        android:textColor="@color/white"
        android:textSize="@dimen/top_text_size"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/layoutCircleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/circle_height"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/circleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleX="0"
            android:scaleY="0" />

        <ImageButton
            android:id="@+id/buttonNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/round_button_next_selector"
            android:src="@drawable/ic_next"
            android:scaleX="0"
            android:scaleY="0" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_bottom"
        android:layout_alignParentBottom="true"
        android:layout_weight="0"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="00'00''"
        android:textColor="@color/white"
        android:textSize="88sp"
        android:scaleX="0"
        android:scaleY="0" />

</LinearLayout>